{
  "compilerOptions": {
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "strictNullChecks": true,
    "target": "ES2022",
    "moduleResolution": "Node",
    "module": "CommonJS",
    "declaration": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "noEmit": true,
    "outDir": "dist",
    "paths": {
      "@/*": ["./src/*"]
    },
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules"
  ]
}